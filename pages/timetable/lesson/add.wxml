        </picker>
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">课程老师</view>
      </view>
      <view class="weui-cell__bd">
       <input class="weui-input" placeholder='请输入上课老师' />
      </view>
    </view>
  </view>
