<view class="page">
  <view class="weui-cells weui-cells1">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">名称</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value='陌陌' />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">学校</view>
      </view>
      <view class="weui-cell__bd">
        <picker bindchange="bindCountryChange" value="{{schoolsIndex}}" range="{{schools}}">
          <view class="weui-select weui-select_in-select-after">{{schools[schoolsIndex]}}</view>
        </picker>
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">班级</view>
      </view>
      <view class="weui-cell__bd">
        <picker bindchange="bindCountryChange" value="{{classsIndex}}" range="{{classs}}">
          <view class="weui-select weui-select_in-select-after">{{classs[classsIndex]}}</view>
        </picker>
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">学期</view>
      </view>
      <view class="weui-cell__bd">
        <picker bindchange="bindCountryChange" value="{{semesterIndex}}" range="{{semester}}">
          <view class="weui-select">{{semester[semesterIndex]}}</view>
        </picker>
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">到校时间</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value='上午7:30' />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">放学时间</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value='下午4:00' />
      </view>
    </view>

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">上午课堂数</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value='4节' />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">下午课堂数</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value='3节' />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">课外班数量</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value='2节' />
      </view>
    </view>
  </view>
  <view class="page__bd page__bd_spacing">
    <button class="weui-btn" type="lans">保存</button>
  </view>
</view>